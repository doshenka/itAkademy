<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    tools:context=".ChatMarina">

    <TextView
        android:id="@+id/textLogo"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/inria_serif"
        android:text="@string/heading_text_chat"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonMenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@color/bg_app"
        android:contentDescription="@string/btn_text_menu"
        android:scaleType="centerInside"
        android:src="@drawable/btn_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonNotify"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="@color/bg_app"
        android:contentDescription="@string/btn_text_notify"
        android:scaleType="centerInside"
        android:src="@drawable/btn_notify_green"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonMenu"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonExit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="@color/bg_app"
        android:contentDescription="@string/btn_text_exit"
        android:onClick="ActivityMain"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonNotify"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icone_back" />

    <View
        android:id="@+id/view"
        android:layout_width="368dp"
        android:layout_height="600dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/editInputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLogo" />

    <EditText
        android:id="@+id/editInputText"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:ems="10"
        android:fontFamily="@font/inria_serif"
        android:inputType="text"
        android:text="@string/text_input"
        android:textAlignment="textStart"
        android:textColor="@color/text_input"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/inria_serif"
        android:text="@string/text_date_mess"
        android:textColor="@color/text_input"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/imageMessage"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view" />

    <ImageView
        android:id="@+id/imageMessage"
        android:layout_width="207dp"
        android:layout_height="113dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/text_get"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:srcCompat="@drawable/message" />

    <ImageButton
        android:id="@+id/imageButtonMessOut"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        android:contentDescription="@string/btn_mess_out"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/editInputText"
        app:layout_constraintEnd_toEndOf="@+id/editInputText"
        app:layout_constraintTop_toTopOf="@+id/editInputText"
        app:srcCompat="@drawable/icone_send_mess" />

</androidx.constraintlayout.widget.ConstraintLayout>